{
  "name": "contracts",
  "version": "1.0.0",
  "description": "Plutocats Contracts",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "pnpm hardhat_clean && rimraf dist artifacts cache cache_hardhat cache-hardhat out typechain",
    "hardhat_clean": "npx hardhat clean",
    "build": "pnpm build:sol --force && pnpm build:ts && pnpm build:declarations",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:sol": "npx hardhat compile",
    "build:declarations": "shx cp typechain/*.d.ts dist/typechain",
    "test": "forge test && npx hardhat test",
    "coverage": "npx hardhat coverage",
    "mint": "npx hardhat mint --network blast_sepolia",
    "deploy-and-configure": "npx hardhat deploy-and-configure --network blast",
    "deploy-local": "npx hardhat deploy-and-configure --local --network anvil",
    "deploy-buyer": "npx hardhat deploy-buyer --plutocats 0xF084962cdC640ED5c7d4e35E52929dAC06B60F7C --network blast"
  },
  "keywords": [],
  "author": "",
  "license": "Unlicense",
  "devDependencies": {
    "@ethersproject/providers": "^5.7.2",
    "@types/mocha": "^10.0.6",
    "chai": "4.4.1",
    "ethers": "^5.6.8",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/express": "^4.17.11",
    "@types/prompt": "^1.1.0",
    "base64-sol": "^1.0.1",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.9.7",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier-plugin-solidity": "^1.0.0-beta.12",
    "prompt": "^1.1.0",
    "shx": "^0.3.3",
    "solidity-coverage": "0.7.21",
    "ts-node": "^10.0.0",
    "typechain": "^8.0.0"
  }
}
